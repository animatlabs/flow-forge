<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <!-- Assembly Information -->
        <AssemblyName>SimpleWorkflowEngine</AssemblyName>
        <AssemblyTitle>Simple Workflow Engine</AssemblyTitle>
        <AssemblyVersion>0.0.1</AssemblyVersion>
        <Authors>Animesh Agarwal</Authors>
        <Copyright>© 2023 AnimatLabs</Copyright>

        <!-- Project Metadata -->
        <Description>
            Simple Workflow Engine is a .NET library for creating and executing workflows. It provides a flexible and extensible framework for defining, managing, and executing complex workflows in .NET applications.
        </Description>
        <PackageTags>workflow, automation, .NET library</PackageTags>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/animatlabs/simple-workflow-engine</RepositoryUrl>
        <PackageProjectUrl>https://github.com/animatlabs/simple-workflow-engine</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        
        <!-- Build Configuration -->
        <IsPackable>true</IsPackable>
        <LangVersion>7.3</LangVersion>
        <OutputType>Library</OutputType>
        <TargetFramework>netstandard2.0</TargetFramework>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\WorkflowEngine.xml</DocumentationFile>
    </PropertyGroup>
</Project>
